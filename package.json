{
  "name": "spotreacthooks",
  "version": "1.0.0",
  "description": "Backend for New Label Releases",
  "main": "server.ts",
  "scripts": {
    "start": "babel-node server.ts --extensions \".ts\"",
    "server-babel": "babel-node server.ts --extensions \".ts\"",
    "server": "nodemon server.ts --extensions \".ts\"",
    "server-ts": "node --loader ts-node/esm ./server.ts",
    "server-ts-nodemon": "nodemon ./server.ts",
    "client": "npm start --prefix client",
    "dev": "npm run server & npm run client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Peter McGowan",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^12.0.0",
    "@types/validator": "^13.6.3",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "concurrently": "^6.3.0",
    "config": "^3.3.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.0.3",
    "sequelize": "^5.21.7",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/node": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "8.0.6",
    "babel-preset-env": "^1.7.0",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.13",
    "ts-node": "^10.3.0"
  },
  "nodemonConfig": {
    "delay": 3000,
    "ignore": [
      "client/*",
      "notes/*",
      "notesdraft/*",
      "docs/*",
      "graphic-design/*",
      "json/*"
    ]
  }
}
